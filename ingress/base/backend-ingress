apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: privideo-backend-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /$2
spec:
  ingressClassName: nginx
  rules:
  - http:
      paths:
      - path: /api(/|$)(.*)
        pathType: ImplementationSpecific
        backend:
          service:
            name: dev-privideo-backend-service
            port:
              number: 8080
